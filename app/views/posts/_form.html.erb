<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 4, class: "form-control" %>
  </div>
  <% @tags.each do |tag| %>
    <%= check_box_tag :tags, tag.id, @post.tags.include?(tag), :name => 'post[tag][]' %>
    <%= label_tag :tags, tag.category %>
  <% end %>
  <%= f.submit "Submit", class: "btn btn-default center-block" %>
<% end %>
