      <li>Edit Tags</li>
      <li class="pull-right"><%= link_to "New Tag", new_tag_path %></li>
    </ul>
  </div>
  <div class="container">
    <ul class="list-inline">
      <% @tags.order(category: :asc).each do |tag| %>
        <li><%= link_to tag.category, edit_tag_path(tag) %></li>
      <% end %>
    </ul>
  </div>
</div>
