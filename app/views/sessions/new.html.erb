<div class="col-lg-8 well">
  <h4>Sign In</h4>
  <%=form_tag log_in_path do%>
    <div class="form-group">
      <%=label_tag :email %>
      <%=text_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%=label_tag :password %>
      <%=password_field_tag :password, nil, class: "form-control" %>
    </div>
    <%=submit_tag "Go", class: "btn btn-info" %>
  <%end%>
</div>
